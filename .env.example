# Environment variables for Vibe Application
# Copy this file to .env and fill in your actual values

# Snyk API Token (get from https://snyk.io/account)
SNYK_TOKEN=snyk-token

# API Configuration (for future backend integration)
API_URL=http://localhost:3000
API_AUTH_TOKEN=your-auth-token
API_AUTH_EMAIL=user@example.com

# Development settings
NODE_ENV=development
PORT=8080

# Lighthouse settings
LIGHTHOUSE_OUTPUT_PATH=./reports/lighthouse

# Docker settings (optional)
COMPOSE_PROJECT_NAME=vibe-app

# Database settings (for future backend integration)
DB_PASSWORD=your-db-password
