{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "curly": "error",
        "no-multi-spaces": "error",
        "no-trailing-spaces": "error",
        "indent": ["error", 4],
        "quotes": ["error", "single", { "avoidEscape": true }],
        "semi": ["error", "always"]
    },
    "globals": {
        "VibeApp": "readonly",
        "Utils": "readonly",
        "APP_CONFIG": "readonly"
    }
}
